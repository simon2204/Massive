,{"level":2,"anchor":"Fetching-News","text":"Fetching News","type":"heading"},{"inlineContent":[{"text":"Use ","type":"text"},{"identifier":"doc:\/\/Massive\/documentation\/Massive\/NewsQuery","isActive":true,"type":"reference"},{"text":" to search for market news:","type":"text"}],"type":"paragraph"},{"syntax":"swift","code":["let client = MassiveClient(apiKey: apiKey)","","\/\/ Paginate through all news for a ticker","for try await page in client.news(NewsQuery(ticker: \"AAPL\")) {","    for article in page.results ?? [] {","        print(\"Title: \\(article.title)\")","        print(\"Published: \\(article.publishedUtc)\")","    }","}"],"type":"codeListing"},{"level":2,"anchor":"Fetching-Historical-Bars","text":"Fetching Historical Bars","type":"heading"},{"inlineContent":[{"text":"Use ","type":"text"},{"identifier":"doc:\/\/Massive\/documentation\/Massive\/BarsQuery","isActive":true,"type":"reference"},{"text":" to retrieve OHLC (Open, High, Low, Close) data:","type":"text"}],"type":"paragraph"},{"syntax":"swift","code":["\/\/ Create a client with your API key","let client = MassiveClient(apiKey: apiKey)","","\/\/ Paginate through daily bars for Apple stock","let query = BarsQuery(","    ticker: \"AAPL\",","    from: \"2024-01-01\",","    to: \"2024-01-31\"",")","","for try await page in client.bars(query) {","    for bar in page.results ?? [] {","        print(\"Date: \\(bar.timestamp), Open: \\(bar.open), Close: \\(bar.close)\")","    }","}"],"type":"codeListing"},{"level":3,"anchor":"Time-Intervals","text":"Time Intervals","type":"heading"},{"inlineContent":[{"text":"The ","type":"text"},{"code":"timespan","type":"codeVoice"},{"text":" parameter controls the bar interval:","type":"text"}],"type":"paragraph"},{"header":"row","rows":[[[{"inlineContent":[{"type":"text","text":"Timespan"}],"type":"paragraph"}],[{"inlineContent":[{"type":"text","text":"Description"}],"type":"paragraph"}]],[[{"inlineContent":[{"code":".minute","type":"codeVoice"}],"type":"paragraph